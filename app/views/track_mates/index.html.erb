<p id="notice"><%= notice %></p>

<h1>Track Mates</h1>

<table>
  <thead>
    <tr>
      <th>Track</th>
      <th>Designer</th>
      <th>State</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @track_mates.each do |track_mate| %>
      <tr>
        <td><%= track_mate.track %></td>
        <td><%= track_mate.designer %></td>
        <td><%= track_mate.state %></td>
        <td><%= link_to 'Show', track_mate %></td>
        <td><%= link_to 'Edit', edit_track_mate_path(track_mate) %></td>
        <td><%= link_to 'Destroy', track_mate, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Track Mate', new_track_mate_path %>
