<div class="card text-center">
    <div class="card-header">
        From: <%= s.producer %>
    </div>
    <div class="card-body">
        <h5 class="card-title"><%= s[@opt] %></h5>
        <audio id="player" controls>
        <source src="<%= url_for(s.file) %>" type="audio/mp3">
    </audio>
        <a href="#" class="btn btn-primary">SoulMate!</a>
    </div>
    <div class="card-footer text-muted">
        <%= s.created_at %>
    </div>
    <div class="card-footer text-muted">
        <%= s.tag_list %>
    </div>
</div><br><br><br>