<div class="card text-center">
    <div class="card-header">
        From: <%= s.producer %>
    </div>
    <div class="card-body">
        <h5 class="card-title"><%= s[@opt] %></h5>
        <audio id="player" controls>
        <source src="<%= url_for(s.file) %>" type="audio/mp3">
    </audio>
    <% if TrackMate.exists?(designer_id: current_designer.id, track_id: s.id) %>
        <%= button_to "Pending Request!", class: "btn btn-primary" %>
    <% else %>
        <%= button_to "SoulMate!", track_mates_path(track_id: s.id, method: :post), class: "btn btn-primary" %>
    <% end %>
    </div>
    <div class="card-footer text-muted">
        <%= s.created_at %>
    </div>
    <div class="card-footer text-muted">
        <%= s.tag_list %>
    </div>
</div><br><br><br>

